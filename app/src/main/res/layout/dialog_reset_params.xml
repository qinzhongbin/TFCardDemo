<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/params"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="主机地址">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/host"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="112.27.97.202:8890" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="应用名">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/appName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="QSKCTS" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="容器名">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/conName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="QSKCTS" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="用户PIN">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/userPIN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="12222222" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="软密钥长度">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/softKeyLen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密钥应用服务id">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/keyAppSvrId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WT-QKMS100_001" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="安全认证密钥">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/secAuthKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JLz3wNv1g8cTbiOBMaE+xl+lEzvqeqYKghYk+rJZxAa8c+Aq8VCeMxi7u0a7vaHVWOjuePeXoM7JFEeAZy64xA==" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="保护密钥">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/protectKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="123456" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="待加密数据">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/plain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="关山难越，谁悲失路之人。萍水相逢，尽是他乡之客。" />
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>