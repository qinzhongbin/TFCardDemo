<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/modeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:text="C2S" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <Button
                android:id="@+id/initRes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="初始化资源" />

            <Button
                android:id="@+id/exportStoreId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导出设备序列号" />

            <LinearLayout
                android:id="@+id/container_c2s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/c2sNegotiateKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C2S协商密钥" />

                <Button
                    android:id="@+id/getKeyHandleByC2S"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C2S获取密钥句柄" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_c2c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_otherStoreId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="对端设备序列号" />

                <Button
                    android:id="@+id/getAuthSyncFlag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C2C获取同步认证码" />

                <EditText
                    android:id="@+id/et_authSynFlag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="对端同步认证码" />

                <Button
                    android:id="@+id/c2cSyncAuth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C2C同步认证" />

                <Button
                    android:id="@+id/getKeyHandleByC2C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C2C获取密钥句柄" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/hardEncrypt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="硬加密" />

                <Button
                    android:id="@+id/hardDecrypt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="硬解密" />
            </LinearLayout>

            <Button
                android:id="@+id/exportSoftKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导出软密钥" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/softEncrypt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="软加密" />

                <Button
                    android:id="@+id/softDecrypt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="软解密" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/queryKeyLength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查询密钥长度" />

                <Button
                    android:id="@+id/onlineChargingKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="在线充注密钥" />
            </LinearLayout>

            <Button
                android:id="@+id/destroyRes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销毁资源" />
        </LinearLayout>

        <EditText
            android:id="@+id/plain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:hint="待加密明文" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
